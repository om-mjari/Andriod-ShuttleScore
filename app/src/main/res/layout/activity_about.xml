<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <!-- CoordinatorLayout wraps AppBar and content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- AppBar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="?attr/colorPrimary">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                app:title=""
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="    About Us"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Scrollable content below AppBar -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="#FAFAFA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- Logo with shadow -->
                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/logo"
                    android:contentDescription="App Logo"
                    android:layout_marginBottom="16dp"
                    android:elevation="6dp" />

                <!-- App Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ShuttleScore"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="24dp" />

                <!-- Content Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:padding="20dp"
                    android:backgroundTint="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ShuttleScore is a smart and user-friendly Badminton Scoring App built for players, coaches, and tournament organizers. Whether you're playing a casual match or organizing a tournament, ShuttleScore makes it easy to track scores and manage tournaments in real-time."
                            android:textSize="16sp"
                            android:textColor="#444444"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="12dp" />

                        <!-- Features -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­ Key Features"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#3F51B5"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Real-time score tracking\nâ€¢ Player and team profiles\nâ€¢ Tournament management\nâ€¢ Match history and stats\nâ€¢ Light and Dark theme options"
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="16dp" />

                        <!-- Vision -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="ðŸŽ¯ Our Vision"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#3F51B5"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To make badminton scoring digital, accessible, and enjoyable for everyone â€” from hobby players to professional tournaments."
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="16dp" />

                        <!-- Developers -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="ðŸ‘¨â€ðŸ’» Developed By"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#3F51B5"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Sneh Prajapati\nâ€¢ Poorav Shah\nâ€¢ Om Jariwala\nâ€¢ Neel Jariwala"
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:layout_marginBottom="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.drawerlayout.widget.DrawerLayout>