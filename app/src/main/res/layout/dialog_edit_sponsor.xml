<!-- dialog_edit_sponsor.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/sponsorNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sponsor Name" />

    <EditText
        android:id="@+id/sponsorContactEdit"
        android:layout_width="match_parent"
        android:maxLength="10"
        android:layout_height="wrap_content"
        android:hint="Sponsor Contact No"
        android:inputType="phone" />

    <EditText
        android:id="@+id/sponsorDescriptionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sponsor Description"
        android:inputType="textMultiLine" />
</LinearLayout>
