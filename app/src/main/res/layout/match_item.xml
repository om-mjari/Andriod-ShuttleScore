<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Status Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/txtMatchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="LIVE"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:chipBackgroundColor="#FFFDE7"
            app:chipCornerRadius="16dp"/>

        <!-- Game Mode -->
        <TextView
            android:id="@+id/txtGameMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Singles Match"
            android:textColor="#424242"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Match Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMatchFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best of 3 Sets"
                android:textColor="#757575"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtGamePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="21 Points per Set"
                android:textColor="#757575"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#EEEEEE"/>

        <!-- Players Section -->
        <!-- Players Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Player 1 -->
            <TextView
                android:id="@+id/tvPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvPlayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="8dp"/>

            <!-- VS Badge -->
            <TextView

                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:backgroundTint="?attr/colorPrimary"
                android:textStyle="bold"
                app:chipCornerRadius="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>

            <!-- Player 2 -->
            <TextView
                android:id="@+id/tvPlayer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 3"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvPlayer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 4"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>

        <!-- Live Score Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLiveScore"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="VIEW SCORE"
            android:textSize="12sp"
            android:background="?attr/colorPrimary"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>